@{
    Layout = "~/Views/Admin/_Layout.cshtml";
}

<div class="block-header">
    <div class="row remove-margin">
        <div class="col-md-8">
            <div class="header-section">
                <h1>Yazı Düzenle</h1>
            </div>
        </div>
        <div class="col-md-2">
            <a href="@Request.UrlReferrer" class="header-link">
                <h1><i class="fa fa-fw fa-chevron-left"></i><small>Geri</small></h1>
            </a>
        </div>
        <div class="col-md-2">
            <a href="javascript:$('form').submit()" class="header-link">
                <h1><i class="fa fa-fw fa-check"></i><small>Kaydet</small></h1>
            </a>
        </div>
    </div>
</div>

<form action="@Request.Url" method="post" enctype="multipart/form-data" class="form-horizontal">

    <input id="Id" name="Id" value="@ViewBag.model.Id" type="hidden" />
    <input id="SectionId" name="SectionId" type="hidden" value="@ViewBag.model.SectionId" />

    <div class="form-group @Html.validationState("Width")">
        <label class="col-md-2 control-label" for="Width">Genişlik</label>
        <div class="col-md-9">
            <select id="Width" name="Width" class="form-control" size="1">
                @for (int i = 1; i <= 12; i++) {
                    <option value="@i" @(i == ViewBag.model.Width ? "selected" : "")>@i Sütun</option>
                }
            </select>
        </div>
    </div>

    <div class="form-group @Html.validationState("Date")">
        <label class="col-md-2 control-label" for="Date">Tarih</label>
        <div class="col-md-9">
            <input id="Date" name="Date" value="@ViewBag.model.Date.ToShortDateString()" class="form-control input-datepicker text-center" data-date-format="dd/mm/yy" placeholder="dd/mm/yy" type="text">
        </div>
    </div>

    <div class="form-group @Html.validationState("Title")">
        <label class="col-md-2 control-label" for="Title">Başlık</label>
        <div class="col-md-9">
            <input id="Title" name="Title" value="@ViewBag.model.Title" type="text" class="form-control" />
        </div>
    </div>

    <div class="form-group @Html.validationState("Summary")">
        <label class="col-md-2 control-label" for="Summary">Özet</label>
        <div class="col-md-9">
            <textarea id="Summary" name="Summary" rows="4" class="form-control">@ViewBag.model.Summary</textarea>
        </div>
    </div>

    <div class="form-group @Html.validationState("Detail")">
        <label class="col-md-2 control-label" for="Detail">Detay</label>
        <div class="col-md-9">
            <textarea id="Detail" name="Detail" rows="4" class="form-control">@ViewBag.model.Detail</textarea>
        </div>
    </div>

</form>

